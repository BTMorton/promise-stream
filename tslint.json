{
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "curly": {
            "options": "ignore-same-line"
        },
        "indent": {
            "options": "tabs"
        },
        "max-line-length": false,
        "member-ordering": {
            "options": {
                "order": "fields-first"
            }
        },
        "no-duplicate-variable": true,
        "no-inferrable-types": true
    }
}